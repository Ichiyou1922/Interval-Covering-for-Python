import sys

unsorted_list = []
R = 1.0 # クラスタの半径

# 入力データのクリーンアップ
for line in sys.stdin:
	cleanline = line.strip('\n')
	# 入力をfloat型に変換しリストに追加
	floline = float(cleanline)
	unsorted_list.append(floline)

sorted_list = sorted(unsorted_list)

# クラスタに関する処理
clusters_count = 0
i = 0
k = 0 
n = len(sorted_list)
while i < n:	 
	clusters_count += 1
	clrange = sorted_list[i] + 2.0 * R
	while i < n and sorted_list[i] <= clrange:
		i += 1
		
print(clusters_count)
	 

	
	
